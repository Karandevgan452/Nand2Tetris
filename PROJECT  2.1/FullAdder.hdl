/**
 * Computes the sum of three bits.
 */
CHIP FullAdder {
    IN a, b, c;
    OUT sum, carry;

    PARTS:
    Xor(a=a, b=b, out=ab);
    Xor(a=ab, b=c, out=sum);
    And(a=a, b=b, out=aband);
    And(a=ab, b=c, out=abcand);
    Or(a=aband, b=abcand, out=carry);
}
